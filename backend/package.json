{
  "name": "express-backend",
  "version": "0.1.0",
  "main": "./build/server.js",
  "engines": {
    "node": "8.* || >= 10.*"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!server/server.ts",
      "!server/app.ts",
      "!scripts/*"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.19",
    "modern-random-ua": "^1.0.3",
    "mongoose": "^5.2.4",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^1.20.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "webpack": "^3.9.1"
  },
  "devDependencies": {
    "@types/app-shared-types": "../types",
    "@types/body-parser": "^1.16.4",
    "@types/dotenv": "^4.0.0",
    "@types/express": "^4.0.36",
    "@types/express-jwt": "^0.0.40",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.116",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.2.0",
    "@types/node": "^8.0.13",
    "@types/passport": "^0.4.5",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.48.3",
    "@types/supertest": "^2.0.2",
    "@types/puppeteer": "^1.12.3",
    "chalk": "^2.4.1",
    "jest": "^24.8.0",
    "mongodb-memory-server": "^2.1.0",
    "nodemon-webpack-plugin": "^3.0.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^3.2.0",
    "ts-node": "^3.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "expect-puppeteer": "^4.3.0",
    "webpack": "^3.9.1"
  },
  "scripts": {
    "heroku-postbuild": "webpack -p",
    "start": "webpack --watch",
    "build": "tsc -p . && webpack --config webpack.config.js",
    "lint": "tslint -c ../tslint.json -p ./tsconfig.json",
    "test": "jest --coverage --colors",
    "test:watch": "jest --coverage --colors --watchAll"
  }
}
